<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.application.dave.wapictures.MainActivity">
    <com.application.dave.wapictures.ui.EmptyView
        android:id="@+id/emptyViewId"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/trackProgressbarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/Widget.AppCompat.ProgressBar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/trackRecyclerViewId"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.application.dave.wapictures.ui.PersonalProfileView
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <fragment
            android:id="@+id/profilePictureByMonthFragmentId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:name="com.application.dave.wapictures.ui.fragments.ProfilePicturesByMonthFragment"/>
    </LinearLayout>
</FrameLayout>
